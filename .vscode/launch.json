    "version": "0.2.0",
    "configurations": [
    {
        "name": "Launch Chrome",
        "request": "launch",
        "type": "pwa-chrome",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}/frontend",
        "sourceMaps": true
    },
    {
        "name": "Python: Django",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/backend/manage.py",
        "args": [
            "runserver",
            "0.0.0.0:5959"
        ],
        "django": true,
        "justMyCode": false
    }
    ]
}